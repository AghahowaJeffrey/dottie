    "test:assessment:unit": "vitest run routes/assessment/__tests__/unit",
    "test:assessment:watch": "vitest routes/assessment/__tests__",
    "test:auth": "vitest run routes/auth/__tests__",
    "test:auth:dev": "vitest run routes/auth/__tests__/e2e",
    "test:auth:prod": "vitest run routes/auth/__tests__/e2e",
    "test:auth:unit": "vitest run routes/auth/__tests__/unit",
    "test:auth:dev:success": "vitest run routes/auth/__tests__/e2e/success",
    "test:auth:dev:error": "vitest run routes/auth/__tests__/e2e/error",
    "test:auth:prod:success": "vitest run routes/auth/__tests__/e2e/success",
    "test:auth:prod:error": "vitest run routes/auth/__tests__/e2e/error",
    "test:auth:watch": "vitest routes/auth/__tests__",
