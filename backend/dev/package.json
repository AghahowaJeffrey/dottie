{
  "name": "dottie-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end API tests for Dottie application",
  "scripts": {
    "test": "npx playwright test",
    "test:basic": "npx playwright test api-basic-endpoints.spec.js",
    "test:auth": "npx playwright test api-auth-endpoints.spec.js",
    "test:assessment": "npx playwright test api-assessment-endpoints.spec.js",
    "test:api": "npx playwright test --project=api",
    "test:browser": "npx playwright test --project=browser",
    "report": "npx playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.0"
  }
} 